<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardElevation="1sp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_poster_imageview"
        android:layout_alignParentLeft="true"
        android:padding="@dimen/movie_overview_padding"
        android:textSize="@dimen/movie_overview_text_size"
        android:id="@+id/movie_user_overview_textview" />

</android.support.v7.widget.CardView>
